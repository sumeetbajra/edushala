
<html>
<head>
    <% include common/head %>

    <!--additional JS and css-->
    <link rel="stylesheet" href="/css/carousel.css">
    <script src="/js/api/kachha.js" type="text/javascript"></script>
    <script src="/js/app/pages/course_details.js" type="text/javascript"></script>

</head>
<body>
<header id="header">
    <% include common/header %>
</header>

<section id="content_body">
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="sidebar course-sidebar col-md-4 col-sm-12">
                    <div class="widget clearfix">
                        <div class="post-media">
                            <div class="entry">
                                <img src="http://files.edushala.com/course/<%=kachha.class_uuid%>/img/sml.jpg" alt="" class="img-responsive">
                            </div>
                        </div><!-- end media -->
                        <hr>
                        <a href="#" id="enroll_popup" class="btn btn-edushala btn-block">Enroll Course</a>
                    </div><!-- end widget -->

                    <div class="widget clearfix">
                        <div class="course-custom-meta">
                            <p class="course-category">Category : <%=kachha.course.category%> </p>
                            <hr>
                            <p class="course-instructors">Instructor : <a href="#educator" title=""><%=kachha.educator.full_name%></a></p>
                            <hr>
                            <p class="course-student">Max Students :  <%=kachha.max_students%>  </p>
                            <hr>
                            <p class="course-forum">Price : Nrs.  <%=kachha.price%></p>
                        </div><!-- end meta -->
                    </div><!-- end widget -->
                </div><!-- end col -->

                <div class="content col-md-8 col-sm-12">
                    <div class="course-list normal-list">
                        <div class="video-wrapper course-detail-box course-widget clearfix">
                            <div class="widget-title clearfix">
                                <h2><%=kachha.course.name%></h2>
                                <hr>
                                <p> <%- kachha.course.description %> </p>
                            </div><!-- end title -->

                            <div class="widget-title clearfix">
                                <h3>Objectives</h3>
                                <hr>
                                <p><%- kachha.course.objectives%> </p>

                            </div><!-- end title -->

                            <section id="educator">
                                <div class="widget-title clearfix">
                                    <h3>About Educator</h3>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <div class="post-media">
                                                <div class="entry">
                                                    <img style="max-width: 160px;" src="http://edushala.com/api.axd/img/user/profile/<%= kachha.educator.user_uuid%>" alt="team member img" class="img-responsive img-circle">
                                                </div>
                                            </div><!-- end media -->
                                        </div><!-- end col -->

                                        <div class="col-md-9 col-sm-12">
                                            <div class="team-member-name">
                                                <p><%= kachha.educator.full_name %> </p>
                                            </div>
                                            <p><%- kachha.educator.bio%> </p>
                                            <hr class="invis">

                                        </div><!-- end col -->
                                    </div><!-- end row -->
                                </div><!-- end title -->
                            </section>
                        </div><!--widget -->
                    </div><!-- end row -->

                    <hr class="largeinvis">

                </div>
            </div>
        </div><!-- end container -->
    </div><!-- end section -->

    <div class="modal fade" id="enrollModal" role="dialog" >
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">Edushala Course Enrollment</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <h6>Thank you for letting Edushala help you in your education endeavour. You are about to enroll in following class.</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h4><%=kachha.course.name%></h4>
                            <div class="post-media">
                                <div class="entry">
                                    <img src="http://files.edushala.com/course/<%=kachha.class_uuid%>/img/sml.jpg" alt="" class="img-responsive">
                                </div>
                            </div><!-- end media -->
                        </div>
                        <div class="col-md-6">
                            <div class="space-top-small"></div>
                            <div class="course-table">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <td> Price </td>
                                        <td>Rs.<span id="price"> <%=kachha.price%></span></td>
                                    </tr>
                                    <tr>
                                        <td>Discount</td>
                                        <td><span id="discount">0</span></td>
                                    </tr>
                                    <tr>
                                        <th>Total</th>
                                        <th>Rs. <span id="total"></span></th>
                                    </tr>
                                    </tbody>
                                </table>
                            </div><!-- end course-table -->
                            <div class="space-top-small"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" placeholder="Group/Coupon code" class="form-control" id="coupon" required>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" id="apply_code" class="btn btn-primary">Apply Code</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="space-top-small"></div>
                </div>
                <div class="modal-footer">
                    <div id="enroll_footer">
                        <button type="button" id="btnEnroll" class="btn btn-edushala">Enroll Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include common/login_modal %>
</section>


<footer id="footer">
    <% include common/footer %>
</footer>

</body>
</html>