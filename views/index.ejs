
<html>
<head>
    <% include common/head %>
    <!--additional JS and css-->
    <script src="/js/api/kachha.js" type="text/javascript"></script>
    <script src="/js/app/pages/home.js" type="text/javascript"></script>
</head>
<body>
    <header id="header">
        <% include common/header %>
    </header>

    <section id="content_body">
       <div class="demo-parallax parallax section looking-photo" data-stellar-background-ratio="0.5" style="background-image:url('images/edushala1.jpg');">
            <div class="container">
                <div class="row centermessage text-left">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <div class="tagline"><h4> <span class="element"></span><br></h4></div>
                        <p class="intro-edu">Edushala is an education marketplace where we connect passionate teachers with knowledge-hungry students. Sit in with our experts to create a course that you want to teach.</p>
                        <div class="text-left large-buttons">
                            <a href="/learn" class="btn btn-edushala btn-lg">VIEW OUR COURSES</a>
                        </div><!-- end title -->
                    </div>
                </div>
            </div>
        </div> <!-- end section -->

        <div class="section">
            <div class="container">
                <div class="big-title text-center">
                    <h2 class="text-center edu-green"><strong>Edushala Courses</strong></h2>
                    <hr class="customhr customhrcenter">
                </div><!-- end title -->

                <div id="course_catalog" class="row course-list">
                    <% for (var i = 0; i < 6; i++) { %>
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 wow fadeIn">
                        <div class="video-wrapper course-catalog course-widget clearfix">
                            <div class="post-media">
                                <div class="entry">
                                    <img alt="" class="img-responsive" src="<%= courses[i].pictureUrl %>">
                                    <div></div>
                                </div>
                            </div><!-- end media -->
                            <div class="widget-title edu-box clearfix">
                                <h3><a href="/learn/<%= courses[i]._id %>"><%= courses[i].name %></a></h3>
                                <hr>
                                <div class="bottom-line clearfix">
                                    <div class="pull-left">
                                        <a class="readmore" href="#"><%= courses[i].educator %></a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="course-single.html" class="btn btn-sm btn-inverse">
                                            <span>Rs.</span><%= courses[i].price %>
                                        </a>
                                    </div>
                                </div><!-- end bottom -->
                            </div><!-- end title -->
                        </div><!--widget --><!-- end col -->
                    </div>
                    <% } %>
                </div><!-- end row -->

                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <a class="btn btn-lg customhrcenter btn-edushala" href="/learn">Browse all courses</a>
                    </div>
                    <div class="col-md-4"></div>
                </div>

            </div><!-- end container -->
        </div><!-- end section -->

        <div class="section" data-stellar-background-ratio="0.5" style="background-image:url('images/numbers_bg.jpg');">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="custom_fact_item">
                            <div class="custom_fact_name">
                                <h3 id="course-stat" class="stat-count">224</h3>
                                <h6>Completed Courses</h6>
                                <span>We have delivered many courses in short time</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="custom_fact_item">
                            <div class="custom_fact_name">
                                <h3 class="stat-count">664</h3>
                                <h6>Happy Students</h6>
                                <span>We have hundreds of happy students</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="custom_fact_item">
                            <div class="custom_fact_name">
                                <h3 class="stat-count">154</h3>
                                <h6>Proud Teachers</h6>
                                <span>Hundreds of teachers have worked with edushala</span>
                            </div>
                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end section -->

        <div class="section lb">
            <div class="container">
                <div class="row">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>We are featured on</strong></h2>
                    </div><!-- end title -->
                </div>
                <div class="space-top-small"></div>
                <div class="row awards-list">
                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="widget clearfix">
                            <a href="https://ventureplus.com.np/wp-content/themes/_tk-1.0/includes/inc/download_issue.php?slug=issue-14" target="_blank">
                                <img src="images/ecs.png" alt="" class="img-responsive">
                            </a>
                        </div><!--widget -->
                    </div><!-- end col -->
                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="widget clearfix">
                            <a href="https://www.facebook.com/TNM.Magazine/photos/a.573076362775123.1073741838.379744022108359/573076859441740/?type=3&theater" target="_blank">
                                <img src="images/tnm.png" alt="" class="img-responsive">
                            </a>
                        </div><!--widget -->
                    </div><!-- end col -->

                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="widget clearfix">
                            <a href="https://glocalkhabar.com/featured/beginners-guide-successful-startup-feature-story/" target="_blank">
                                <img src="images/glocal.png" alt="" class="img-responsive">
                            </a>
                        </div><!--widget -->
                    </div><!-- end col -->

                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="widget clearfix">
                            <a href="http://admin.myrepublica.com/portal/index.php/ads/ncell.swf?action=news_details&news_id=67601" target="_blank">
                                <img src="images/republica.png" alt="" class="img-responsive">
                            </a>
                        </div><!--widget -->
                    </div><!-- end col -->

                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="widget clearfix">
                            <a href="http://www.huffingtonpost.com/niranjan-kunwar/edushala_b_4541063.html" target="_blank">
                                <img src="images/huffing.png" alt="" class="img-responsive">
                            </a>
                        </div><!--widget -->
                    </div><!-- end col -->

                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                        <div class="widget clearfix">
                            <a href="http://epaper-archive.ekantipur.com/kathmandupost/showtext.aspx?boxid=142451921&parentid=19406&issuedate=1872014" target="_blank">
                                <img src="images/ktm_post.png" alt="" class="img-responsive">
                            </a>
                        </div><!--widget -->
                    </div><!-- end col -->

                </div>
            </div><!-- end container -->
        </div><!-- end section -->
    </section>


    <footer id="footer">
    <% include common/footer %>
    </footer>

</body>
</html>