
<input type="hidden" value="<%= userToken %>" id="token" />
<input type="hidden" value="<%= user %>" id="user" />
<input type="hidden" value="<%= serverUrl %>" id="serverUrl" />
<iframe src="<%= serverUrl %>" id="iframe" style="height:0px; width: 0px; visibility: hidden"></iframe>
Please wait while we redirect...

<script>
        var userToken = document.getElementById('token').value;
        var user = document.getElementById('user').value;
        var serverUrl = document.getElementById('serverUrl').value;

        var win = document.getElementById("iframe").contentWindow
        document.getElementById("iframe").addEventListener("load", function() {
          win.postMessage(
            JSON.stringify({
              token: userToken,
              user: user
            }),
            "*"
          )
          window.location.replace(serverUrl + '/dashboard')
        })
</script>
