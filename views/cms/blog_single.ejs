
<html>
<head>
    <% include ../common/head %>
    <!--additional JS and css-->
</head>
<body>
<header id="header" class="header full-width transparent fixed header-small clearfix">
    <% include ../common/header %>
</header>

<section id="content_body">
    <div class="page-title section lb">
        <div class="container">
            <div class="clearfix">
                <div class="title-area pull-left">
                    <h2>Edushala Blog <small>Welcome to edushala blog page.</small></h2>
                </div><!-- /.pull-right -->
                <div class="pull-right hidden-xs">
                    <div class="bread">
                        <ol class="breadcrumb">
                            <li><a href="/">Home</a></li>
                            <li><a href="/blog">Blog</a></li>
                            <li class="active">Blog Single</li>
                        </ol>
                    </div><!-- end bread -->
                </div><!-- /.pull-right -->
            </div><!-- end clearfix -->
        </div>
    </div><!-- end page-title -->

    <div class="section">

        <div class="container">
            <div class="row">
                <div class="content col-md-9 col-sm-12">
                    <div class="post-media">
                        <img src="images/course.jpg" alt="" class="img-responsive">
                    </div><!-- end media -->

                    <div class="post-padding">
                        <div class="blog-big-title clearfix">
                            <h3><%= blog.title %></h3>
                        </div>

                        <div class="blog-single-meta clearfix">
                            <ul class="list-inline">
                                <li> <a href="/" class="readmore">Edushala</a></li>
                                <li><i class="fa fa-clock-o"></i> <%= blog.dateAdded %> </li>
                            </ul>
                        </div><!-- end meta -->

                        <%- blog.blogContent %>
                        <hr>

                    </div><!-- end post-padding -->

                    <hr class="invis">

                    <div class="post-padding">
                        <div class="content-widget clearfix">
                            <div class="widget-title">
                                <h3>5 Comments</h3>
                                <hr>
                            </div>
                            <!-- end about -->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="comments">
                                        <div class="panel panel-info">
                                            <div class="panel-body">
                                                <ul class="media-list">
                                                    <li class="media">
                                                        <div class="comment">
                                                            <div class="media-body">
                                                                <strong class="text-success">Jane Doe</strong>
                                                                <span class="text-muted">
                                                                                                <small class="text-muted">6 days ago</small></span>
                                                                <p>
                                                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, <a href="#">#some link </a>.
                                                                </p>
                                                                <a href="#" class="btn btn-edushala btn-sm">Reply</a>
                                                            </div>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                        <ul class="media-list">
                                                            <li class="media">
                                                                <div class="comment">
                                                                    <div class="media-body">
                                                                        <strong class="text-success">MrAwesome</strong>
                                                                        <span class="text-muted">
                                                                                                        <small class="text-muted">2 days ago</small></span>
                                                                        <p>
                                                                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet.
                                                                        </p>
                                                                        <a href="#" class="btn btn-edushala btn-sm">Reply</a>
                                                                    </div>
                                                                    <div class="clearfix"></div>
                                                                </div>
                                                            </li>
                                                        </ul>
                                                    </li>
                                                    <li class="media">
                                                        <div class="comment">
                                                            <div class="media-body">
                                                                <strong class="text-success">Jana Cova</strong>
                                                                <span class="text-muted">
                                                                                                <small class="text-muted">12 days ago</small></span>
                                                                <p>
                                                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet.
                                                                </p>
                                                                <a href="#" class="btn btn-edushala btn-sm">Reply</a>
                                                            </div>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end postpager -->

                        <div class="content-widget clearfix">
                            <div class="widget-title">
                                <h3>Comment Form</h3>
                                <hr>
                            </div>
                            <!-- end about -->

                            <div class="contact_form defaultform comment-form">
                                <form class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <label>Name <span class="required">*</span></label>
                                        <input type="text" class="form-control" placeholder="">
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <label>Email <span class="required">*</span></label>
                                        <input type="email" class="form-control" placeholder="">
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <label>Comment <span class="required">*</span></label>
                                        <textarea class="form-control" placeholder=""></textarea>
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <input type="submit" value="Send Comment" class="btn btn-edushala" />
                                    </div>
                                </form>
                            </div>
                            <!-- end commentform -->
                        </div>
                        <!-- end postpager -->
                    </div><!-- end post-padding -->
                </div><!-- end content -->

                <div class="sidebar col-md-3 col-sm-12">
                    <div class="widget clearfix">
                        <a href="#"><img src="/images/course2.jpg" alt="" class="img-responsive"></a>
                    </div>

                    <div class="widget clearfix">
                        <div class="widget-title">
                            <h3>Popular Articles</h3>
                            <hr>
                        </div><!-- end widget-title -->

                        <div class="related-posts">
