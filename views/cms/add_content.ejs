
<html>
<head>
    <% include ../common/head %>
    <!--additional JS and css-->
    <script src="/js/vendors/ckeditor/ckeditor.js" type="text/javascript"></script>
</head>
<body>
<header id="header" class="header full-width transparent fixed header-small clearfix">
    <% include ../common/header %>
</header>

<section id="content_body">
    <div class="space-top-small"></div>
    <div class="container">
        <div class="text-center">
            <div class="widget-title">
                <h2 class="text-center edu-green"><strong>Add a beautiful content.</strong></h2>
            </div><!-- end title -->
        </div><!-- end title -->
        <div class="row">
            <div class="col-md-12">
                <form>
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" placeholder="Enter sweet and short appealing title">
                    </div>
                    <div class="form-group">
                        <label for="comment">Content:</label>
                        <textarea class="form-control" name="blog_content" rows="5" id="blog_content"></textarea>
                    </div>
                    <button type="button" class="btn btn-edushala">Submit</button>
                    <script>
                        CKEDITOR.replace( 'blog_content' );
                    </script>
                </form>
            </div>
        </div>
    </div>

</section>

<footer id="footer">
    <% include ../common/footer %>
</footer>

</body>
</html>