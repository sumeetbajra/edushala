
<html>
<head>
    <% include ../common/head %>
    <!--additional JS and css-->
    <script src="/js/vendors/ckeditor/ckeditor.js" type="text/javascript"></script>
    <script src="/js/app/pages/add_content.js" type="text/javascript"></script>
</head>
<body>
<header id="header" class="header full-width transparent fixed header-small clearfix">
    <% include ../common/header %>
</header>

<section id="content_body">
    <div class="space-top-small"></div>
    <div class="container">
        <div class="text-center">
            <div class="widget-title">
                <h2 class="text-center edu-green"><strong>Add a beautiful content.</strong></h2>
            </div><!-- end title -->
        </div><!-- end title -->
        <div class="row">
            <div id="msg"></div>
            <div class="col-md-12">
             <form id= "uploadForm" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label for="title">Featured Image</label>
                    </div>
                    <input type="file" name="featuredImg"  id="featuredImg" />
                    <input type="button" id="btnUploadImg" value="Upload Image">
                </form>

                <form>
                 <!--   <div class="form-group">
                        <label for="title">Featured Image</label>
                        <input type="file" id="featuredImg" name="featuredImg" />
                        <input type="button" value="Upload Image" name="uploadImage">
                    </div> -->
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" placeholder="Enter sweet and short appealing title">
                    </div>

                    <div class="form-group">
                        <label for="comment">Content:</label>
                        <textarea class="form-control" name="blog_content" rows="5" id="editor1" name="editor1"></textarea>
                    </div>
                    <button type="button" id="btnAddConent" class="btn btn-edushala">Save</button>
                    <script>
                        CKEDITOR.replace( 'editor1' );
                        CKEDITOR.replace( 'editor1', {
                            extraAllowedContent:  'img[alt,border,width,height,align,vspace,hspace,!src];'
                        } );
                        CKEDITOR.config.allowedContent = true;
                    </script>
                </form>
            </div>
        </div>
    </div>

</section>

<footer id="footer">
    <% include ../common/footer %>
</footer>

</body>
</html>