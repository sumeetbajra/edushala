<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <a class="navbar-brand with-text" title="Edushala" href="/">Edushala</a>
        <ul class="sidebar-nav">
            <li><a href="/admin_dashboard">Dashboard <span><i class="fa fa-user"></i></span></a></li>
            <li><a href="/add_contents">Add Content <span><i class="fa fa-plus"></i></span></a></li>
            <li><a href="/content_list">BLog Content <span><i class="fa fa-edit"></i></span></a></li>
            <li><a href="/">Logout  <span><i class="fa fa-sign-out"></i></span></a></li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <div id="page-content-wrapper">
        <div class="section">
            <div class="container-fluid">
                <div class="text-center">
                    <div class="widget-title">
                        <h2 class="text-center edu-green"><strong>Update Content</strong></h2>
                    </div><!-- end title -->
                </div><!-- end title -->
                <div class="space-top-small"></div>
                <div class="row">
                    <div id="msg"></div>
                    <div class="col-md-12">
                        <form>
                            <div class="form-group">
                                <label for="title">Title:</label>
                                <input type="text" class="form-control" id="title" value="<%= blog.title %>" placeholder="Enter sweet and short appealing title">
                            </div>

                            <div class="form-group">
                                <label for="comment">Content:</label>
                                <textarea class="form-control" rows="5" id="editor1" name="editor1"><%= blog.blogContent %></textarea>
                            </div>
                            <button type="button" id="btnUpdateContent" class="btn btn-default">Update</button>
                            <button type="button" id="btnDeleteContent" class="btn btn-primary">Delete</button>
                            <script>
                                CKEDITOR.replace( 'editor1' );
                                CKEDITOR.replace( 'editor1', {
                                    extraAllowedContent:  'img[alt,border,width,height,align,vspace,hspace,!src];'
                                } );
                                CKEDITOR.config.allowedContent = true;
                            </script>
                        </form>
                    </div>
                </div>
            </div><!-- end container -->
        </div><!-- end section -->

        <% include ../common/footer %>

        <!-- end copyrights -->
        <!-- end copyrights -->
    </div>
    <!-- end page-content-wrapper -->
</div>
<!-- end wrapper -->


</body>
</html>