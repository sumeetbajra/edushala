
<html>
<head>
    <% include ../common/head %>
    <!--additional JS and css-->
    <script src="/js/api/user.js" type="text/javascript"></script>
    <script src="/js/app/pages/signup.js" type="text/javascript"></script>
</head>
<body>
<header id="header" class="header full-width transparent fixed header-small clearfix">
    <% include ../common/header %>
</header>

<section id="content_body">
    <div class="section space-box">
        <div class="container-fluid">
            <form class="defaultform row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="register-widget clearfix">
                        <div class="space-top-small"></div>
                        <div class="widget-title">
                            <h2>Registration</h2>
                            <hr>
                            <div id="msg"></div>
                        </div><!-- end title -->
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Name</label>
                                <input type="text" id="full_name" class="form-control" placeholder="Enter full name" required>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Email</label>
                                <input type="email" id="email" placeholder="Enter email address"  class="form-control" required>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Password</label>
                                <input type="password" id="password" placeholder="Enter strong password" class="form-control"  required>
                            </div>
                            <div class="col-sm-12">
                                <div>
                                    <input type="checkbox" id="check_terms" class="checkbox" />  I agree to Edushala's <a href="/terms" target="_blank">terms and conditions.</a>
                                </div>
                                <button type="button" class="btn btn-edushala" id="btnSignup">Signup</button>
                                <hr />
                                <p>Already have an account? <a href="login">Login</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </form><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
</section>

<footer id="footer">
    <% include ../common/footer %>
</footer>

</body>
</html>