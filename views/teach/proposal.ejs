
<html>
<head>
    <% include ../common/head %>
    <script src="/js/api/misc.js" type="text/javascript"></script>
    <script src="/js/app/pages/proposal.js" type="text/javascript"></script>
    <!--additional JS and css-->
</head>
<body>
<header id="header">
    <% include ../common/header %>
</header>

<section id="content_body">
    <div class="section lightbg onecourse">
        <div class="container">
            <div class="text-center">
                <h2><strong>Teach a Class</strong></h2>
            </div><!-- end title -->
            <div class="section">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div id="msg"></div>
                            <form>
                                <div class="form-group">
                                    <label for="category">Name :</label>
                                    <input type="text" class="form-control" id="full_name" placeholder="Please enter your full name">
                                </div>
                                <div class="form-group">
                                    <label for="price">Email :</label>
                                    <input type="text" class="form-control" id="email" placeholder="Enter your email address">
                                </div>
                                <div class="form-group">
                                    <label for="cname">Course name :</label>
                                    <input type="text" class="form-control" id="course_name" placeholder="Enter short and sweet course name">
                                </div>
                                <div class="form-group">
                                    <label for="course_desc">Course description :</label>
                                    <textarea style="resize:vertical;" class="form-control" id="course_desc" placeholder="Enter course description..." rows="6"></textarea>
                                </div>
                                <button type="button" id="btnProposal" class="btn btn-edushala">Submit</button>
                            </form>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div><!-- end container -->
            </div><!-- end section -->
        </div><!-- end container -->
    </div><!-- end section -->


</section>


<footer id="footer">
    <% include ../common/footer %>
</footer>

</body>
</html>